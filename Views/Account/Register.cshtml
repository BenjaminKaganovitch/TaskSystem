@model SupportTicketSystem.Models.BaseAuthViewModel.RegisterViewModel


<h2>Register</h2>

<form asp-controller="Account" asp-action="Register" method="post">


    <div class="form-group">
        <label asp-for="UserRole" class="control-label">Select Account Role</label>
        <div>
            <input type="radio" asp-for="UserRole" value="Admin" /> Admin
            <input type="radio" asp-for="UserRole" value="User" /> User
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
